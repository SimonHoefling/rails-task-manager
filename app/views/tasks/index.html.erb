<div >
  <h1>Tasks List</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><input type="checkbox" <%= 'checked' if task.completed %>>
      <label><%= link_to task.title, task_path(task) %></label>
      <label><%= link_to "🗑️", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></label></li>
    <% end %>
  </ul>
  <%= link_to 'Create a new task', '/tasks/new' %>
</div>
